<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:elevation="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivProductImage_vertical_rv"
                android:layout_width="wrap_content"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/dp_150" />

            <ImageButton
                android:id="@+id/btnMyAdds_verticle_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_heart_like_love_icon" />

            <TextView
                android:id="@+id/tvPrice_vertical_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivProductImage_vertical_rv"
                android:drawableStart="@drawable/ic_money"
                android:drawablePadding="@dimen/dp_2"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvAddress_vertical_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPrice_vertical_rv"
                android:layout_marginStart="@dimen/dp_10"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvLocation_vertical_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_below="@id/tvPrice_vertical_rv"
                android:drawableStart="@drawable/ic_location_on"
                android:drawablePadding="@dimen/dp_2"
                android:textColor="@color/black" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>