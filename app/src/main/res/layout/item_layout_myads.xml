<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="10dp"
    android:background="@drawable/bg_rect"
    android:padding="@dimen/dp_5"
    app:cardCornerRadius="10dp">


    <RelativeLayout
        android:id="@+id/myadsllcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/myadstvimage"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/myadstvsign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/myadstvimage"
            android:paddingStart="10dp"
            android:text="₹"
            android:paddingTop="@dimen/dp_12"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/black2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/myadstvprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/myadstvimage"
            android:padding="12dp"
            android:layout_toEndOf="@id/myadstvsign"
            android:paddingStart="10dp"
            android:text="₹"
            android:textStyle="bold"
            android:textColor="@color/black2"
            android:textSize="16sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/myadstvheart"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@drawable/ic_heartfilled"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/dp_10"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/myadstvPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/myadstvProductName"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toRightOf="@id/myadstvimage"
            android:padding="12dp"

            android:drawablePadding="@dimen/dp_5"
            android:text="Place"
            android:drawableStart="@drawable/ic_location"
            android:textColor="@color/black2"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/myadstvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/myadstvprice"
            android:layout_toRightOf="@id/myadstvimage"
            android:padding="12dp"
            android:textAllCaps="true"
            android:layout_marginStart="@dimen/dp_10"
            android:text="Product Name"
            android:textColor="@color/black2"
            android:textSize="14sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>